<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:background="#FFFFFFFF"
                  tools:context="lexjam12.htlkaindorf.at.diplomarbeit.NFCHelper"
                  android:weightSum="1"
                  android:id="@+id/activity_main">
        <TextView
            android:id="@+id/spinner_textfield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:textSize="33sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:spinnerMode="dialog"
            android:background="@drawable/shape_button_withoutstroke"
            style="?android:attr/textViewStyle">
        </Spinner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/door"
                android:onClick="door"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:textSize="15sp"
                style="?android:attr/borderlessButtonStyle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/connect"
                    android:onClick="connect"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/button_connect"
                    android:textSize="15sp"
                    android:drawableTop="@drawable/icon_connect"
                    style="?android:attr/borderlessButtonStyle"/>

                <Button
                    android:id="@+id/list1"
                    android:onClick="list"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_choose"
                    android:textSize="15sp"
                    android:drawableTop="@drawable/icon_list"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/edit"
                    android:onClick="edit"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_edit"
                    android:textSize="15sp"
                    android:drawableTop="@drawable/icon_edit"
                    style="?android:attr/borderlessButtonStyle"/>

                <Button
                    android:id="@+id/add"
                    android:onClick="add"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_add"
                    android:textSize="15sp"
                    android:drawableTop="@drawable/icon_add"
                    style="?android:attr/borderlessButtonStyle"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/doorstate"
            android:layout_height="0dp"
            android:layout_width="0dp"/>

        <TextView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:id="@+id/name"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/pass"/>
    </LinearLayout>
</ScrollView>
